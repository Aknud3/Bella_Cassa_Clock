from machine import Pin
import time

# Define the GPIO pin for the button
button_pin = 13

# Set up the button pin as an input without any pull-up or pull-down resistors
button = Pin(button_pin, Pin.IN)

print("Button Tester Program Started")

while True:
    # Read the state of the button
    button_state = button.value()

    # Check if the button is pressed (assuming HIGH state when pressed)
    if button_state == 1:
        print("Button Pressed!")
    else:
        print("Button Released!")

    # Small delay to avoid too much output
    time.sleep(0.2)  # 200 milliseconds delay

